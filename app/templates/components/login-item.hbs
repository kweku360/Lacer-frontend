<div id="login-wrapper" class="">

    <div id="login" class="pure-u-sm-1-1 pure-u-md-10-24 pure-u-lg-10-24">

        <div class="logo-img pure-u-sm-1-1"><img src="/assets/images/logoe.png"></div>
        <h3 class="pure-u-1-1">Log In to Your Account</h3>
       <span class="{{errorView}} error">
            Invalid Email / Password Combination
        </span>
        <form>
          {{input type="text" value=loginDetails.email placeholder="Email"}}
          {{input type="password" value=loginDetails.password placeholder="Password"}}
            <input {{action "memberLogin"}}   type="submit" value="Log in" /><br><br>
            <a class="pure-u-sm-1-1 pure-u-lg-3-5"> {{#link-to  'resetpassword'}}Forgot your Password ?{{/link-to}} </a>
        </form>

        <div class="msg">
            Don't have an Account ?  {{#link-to  'register'}}Click Here{{/link-to}} to Sign up
        </div>
    </div>
</div>