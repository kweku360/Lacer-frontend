<div class="view-heading pure-u-1-1">
    <div class="text bolt-light">New Case</div>
    <div class="breadcrumb flat bolt-light">
      {{#link-to  'dashboard' activeClass=""}}
          Home
      {{/link-to}}
      {{#link-to  'suits' activeClass=""}}
        Cases
    {{/link-to}}
      {{#link-to  'suits.new'}}
          New Case
    {{/link-to}}
    </div>
</div>
<div class="submenu-box pure-u-sm-5-5 pure-u-lg-4-24 pure-u-md-4-24">
  {{suit-detail newSuit=suitInfo defendants=newDefendantArray plaintiffs=newPlaintiffArray lawyers=newLawyerArray}}
</div>
<div class="middle-box pure-u-sm-5-5 pure-u-lg-19-24 pure-u-md-19-24">
    <div class="wraps">
        <section class="section-form">
         <div class="coa"> <img src="/assets/images/coasmall.jpg"></div>
          <br>
            <div class="elcenter pure-g">
                <label for="name" class="form-label form-label--required">
                    Case Type
                </label>
                <div class="pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5"> {{input type="checkbox" checked=viewstate.selectedCriminal}}
                    <b>Criminal Case</b>
                </div>
                <div class="pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5"> {{input type="checkbox" checked=viewstate.selectedCivil}}
                    <b>Civil Case</b>
                </div>
            </div>
           <div class="{{viewstate.showview}}">

            <form name="signup" class=" form pure-u-sm-5-5 pure-u-lg-4-5 pure-u-md-4-5"
                  id="newSuit" novalidate>
                <div class="pure-g">

                    <div class="form-group pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5 ">
                        <label for="name" class="form-label form-label--required">
                            Case Number:
                        </label>

                        <div class="form-addon">
                            <div class="form-addon__addon">
                                <i class="fa fa-clone"></i>
                            </div>
                          {{input type="text" required="true" class="form-input" value=suitInfo.suitNumber
                          placeholder="case number"}}
                        </div>
                    </div>
                    <div class="form-group form-group  pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5 ">
                        <label for="date" class="form-label form-label--required">
                            Date:
                        </label>
                        <div class="form-addon">
                            <div class="form-addon__addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                          {{date-picker  required="true" class="form-input" date=suitInfo.suitDate format='DD-MM-YYYY'}}
                            <!--<input value="" type="text" id="date" class="form-input" placeholder="choose Date">-->
                        </div>
                    </div>

                </div>
                <div class="pure-g">
                    <label for="name" class="form-label form-label--required">
                        Case Title:
                    </label>
                    <div class="{{viewstate.civilcase}} form-group pure-u-sm-5-5 pure-u-lg-9-24 pure-u-md-9-24 ">
                        <label for="name" class="form-label">
                            Plaintiff
                        </label>
                        <div class="form-addon">
                          {{input type="text" required="true" class="form-input" value=suitInfo.suitTitlePlaintiff placeholder=""}}
                        </div>
                    </div>
                    <div class="{{viewstate.criminalcase}} form-group pure-u-sm-5-5 pure-u-lg-9-24 pure-u-md-9-24 ">
                        <label for="name" class="form-label">
                            Plaintiff
                        </label>
                        <div class="form-addon">
                          {{input type="text" disabled="true" class="form-input" value=suitInfo.suitTitlePlaintiff
                          placeholder=""}}
                        </div>
                    </div>
                    <div class="versusTxt pure-u-sm-5-5 pure-u-lg-1-24 pure-u-md-1-24 ">
                     vs
                    </div>
                    <div class="form-group form-group  pure-u-sm-5-5 pure-u-lg-9-24 pure-u-md-9-24 ">
                        <label for="date" class="form-label form-label">
                            Defendant
                        </label>
                        <div class="form-addon">
                          {{input type="text" required="true" class="form-input" value=suitInfo.suitTitleDefendant placeholder=""}}
                        </div>
                    </div>

                </div>
                <div class="pure-g">
                    <div class="form-group pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5">
                        <label for="name" class="form-label form-label">
                            Court :
                        </label>
                        <div class="form-addon" >
                          {{view  "select" content=courts pattern="/^((?!Select One).)*$/s"
                          required="true" value=suitInfo.suitCourt}}

                      </div>
                    </div>
                    <div class="form-group pure-u-sm-5-5 pure-u-lg-2-5 pure-u-md-2-5">
                        <label for="name" class="form-label">
                            Case Access :
                        </label>
                        <div class="form-addon">
                          {{view "select" content=accesslevel value=suitInfo.suitAccess}}
                      </div>
                    </div>

                </div>


                <div class="form-footer__cta">
                    <button type="submit" {{action "next"}} class="button">proceed</button>
                </div>
            </form> </div></section>
    </div>

</div>





<div class="middle-box  pure-u-sm-5-5 pure-u-lg-23-24 pure-u-md-23-24">
    <div class="wraps">
        <section class="section-form pure-g">
            <div class="coa"> <img src="/assets/images/coasmall.jpg"></div>
            <form id="addLawyer" class="pure-g">
                    <div class="form-group pure-u-sm-5-5 pure-u-lg-6-24 pure-u-md-6-24">
                        <label for="name" class="form-label form-label--required">
                            Lawyer Name:
                        </label>
                        <div class="form-addon">
                            <div class="form-addon__addon">
                                <i class="fa fa-clone"></i>
                            </div>
                          {{input type="text" required="true" class="form-input" value=lawyerInfo.lawyerName
                          placeholder="Name"}}
                        </div>
                    </div>

                    <div class="form-group form-group pure-u-sm-1-1 pure-u-lg-6-24 pure-u-md-6-24">
                        <label for="date" class="form-label ">
                            Email :
                        </label>
                        <div class="form-addon">
                          {{input type="email" required="true" class="form-input" value=lawyerInfo.lawyerEmail
                          placeholder="email"}}
                        </div>
                    </div>
                    <div class="form-group pure-u-sm-1-1 pure-u-lg-6-24 pure-u-md-6-24">
                        <label for="name" class="form-label form-label--required">
                            Lawyer Address :
                        </label>
                        <div class="form-addon" data-states-for="name">
                            <div class="form-addon__addon">
                                <i class="fa fa-home"></i>
                            </div>
                          {{input type="text" required="true" class="form-input" value=lawyerInfo.lawyerAddress
                          placeholder="Address"}}
                        </div>
                    </div>


                    <div class="form-group pure-u-sm-1-1 pure-u-lg-6-24 pure-u-md-6-24 form-footer__cta" style="margin-bottom: 10px">

                        <button {{action "addAnother"}} class="button">Add New</button>

                    </div>


            </form></section>
        <div class=" pure-u-sm-5-5 pure-u-lg-23-24 pure-u-md-23-24">
            <table class="">
                <thead>
                <tr>
                    <th>Lawyer Name</th>
                    <th>Lawyer Code</th>
                    <th>Lawyer Email</th>
                    <th>Lawyer Address</th>
                    <th>Phone Number </th>
                    <th>Phone Number 2</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {{#each lawyersArray}}
                    <tr>
                        <td>{{this.lawyerName}}</td>
                        <td>{{this.lawyerId}}</td>
                        <td>{{this.lawyerEmail}}</td>
                        <td>{{this.lawyerAddress}}</td>
                        <td>{{this.lawyerContact1}}</td>
                        <td>{{this.lawyerContact2}}</td>
                        <td>
                            <i {{action "removeOne" this.index }}class="fa fa-times-circle"></i>
                            <i {{action "editOne" this.index }}class="fa fa-pencil-square-o"></i>
                        </td>
                    </tr>
                {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>


